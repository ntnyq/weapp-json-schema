{
  "eslint.enable": true,
  "prettier.enable": true,
  "editor.formatOnSave": true,
  "prettier.configPath": "./prettier.config.mjs",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never",
    "source.sortImports": "never"
  },
  "eslint.validate": [
    "vue",
    "yaml",
    "toml",
    "json",
    "jsonc",
    "json5",
    "markdown",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "cSpell.words": [
    "acad",
    "bumpp",
    "changelogithub",
    "exparser",
    "kbone",
    "pnpm",
    "presentationml",
    "qcloud",
    "rgba",
    "spreadsheetml",
    "vmax",
    "vmin",
    "weapp",
    "werun",
    "weui",
    "wordprocessingml",
    "wxml",
    "wxss"
  ]
}
